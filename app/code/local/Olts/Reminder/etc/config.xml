<config>
    <modules>
        <Olts_Reminder>
            <version>0.1.0</version>
        </Olts_Reminder>
    </modules>
    <global>
        <helpers>
            <olts_reminder>
                <class>Olts_Reminder_Helper</class>
            </olts_reminder>
        </helpers>
        <blocks>
            <olts_reminder>
                <class>Olts_Reminder_Block</class>
            </olts_reminder>
        </blocks>
        <models>
            <olts_reminder>
                <class>Olts_Reminder_Model</class>
                <resourceModel>olts_reminder_resource</resourceModel>
            </olts_reminder>
            <olts_reminder_resource>
                <class>Olts_Reminder_Model_Resource</class>
                <deprecatedNode>cms_mysql4</deprecatedNode>
                <entities>
                    <reminder>
                        <table>reminder</table>
                    </reminder>
                    <statuses>
                        <table>reminder_statuses</table>
                    </statuses>
                    <group>
                        <table>reminder_group</table>
                    </group>
                    <group_user_relation>
                        <table>reminder_group_user_relation</table>
                    </group_user_relation>
                </entities>
            </olts_reminder_resource>
        </models>
        <resources>
            <olts_reminder_setup>
                <setup>
                    <module>Olts_Reminder</module>
                </setup>
            </olts_reminder_setup>
        </resources>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Olts_Reminder before="Mage_Adminhtml">Olts_Reminder_Adminhtml</Olts_Reminder>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <olts_reminder>
                    <file>reminder.xml</file>
                </olts_reminder>
            </updates>
        </layout>
    </adminhtml>
    <stores>
        <admin>
            <design>
                <package>
                    <name>default</name>
                </package>
                <theme>
                    <default>oltsreminder</default>
                </theme>
            </design>
        </admin>
    </stores>
</config>
